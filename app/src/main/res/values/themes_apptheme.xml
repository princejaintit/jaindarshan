<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.




    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.




        -->
    </style>

    <!-- Application theme. -->

    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/MyActionBar</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlActivated">@color/btn_start_color</item>-->
        <!--<item name="colorControlHighlight">@color/btn_start_color</item>-->

        <!--
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        -->
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="android:buttonStyle">@style/ButtonAppTheme</item>
        <item name="editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:textViewStyle">@style/TextViewAppTheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonAppTheme</item>
    </style>

    <style name="MyTheme" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>



    <style name="CustomAlertDialogStyle">
        <!--<item name="android:bottomBright">@color/text_title_color</item>
        <item name="android:bottomDark">@color/text_title_color</item>
        <item name="android:bottomMedium">@color/text_title_color</item>
        <item name="android:centerBright">@color/text_title_color</item>
        <item name="android:centerDark">@color/text_title_color</item>
        <item name="android:centerMedium">@color/text_title_color</item>
        <item name="android:fullBright">@color/text_title_color</item>
        <item name="android:fullDark">@color/text_title_color</item>
        <item name="android:topBright">@color/text_title_color</item>
        <item name="android:topDark">@color/text_title_color</item>-->
    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeHome" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="colorControlActivated">@color/btn_start_color</item>-->
        <!--<item name="colorControlHighlight">@color/btn_start_color</item>-->

        <!--
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        -->
        <!--<item name="searchViewStyle">@style/SearchView</item>-->
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
        <item name="buttonStyle">@style/ButtonAppTheme</item>
        <item name="editTextStyle">@style/EditTextAppTheme</item>
        <item name="android:textViewStyle">@style/TextViewAppTheme</item>
        <item name="android:checkboxStyle">@style/CheckBoxAppTheme</item>
        <item name="android:buttonStyleToggle">@style/ToggleButtonAppTheme</item>
    </style>



</resources>