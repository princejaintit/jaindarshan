            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    <TextView
                        android:id="@+id/temple_name_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:textStyle="bold"
                        android:textColor="@color/title_color"
                        android:textSize="16sp" />

                        <ImageView
                            android:id="@+id/delete_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/ic_clear_black_24dp"/>
                        </LinearLayout>

                    <TextView
                        android:id="@+id/temple_address_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/temple_contactNo_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:id="@+id/call_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/ic_phone_black_48dp"/>

                        <ImageView
                            android:id="@+id/share_iv"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/ic_action_share"/>


                    <TextView
                        android:id="@+id/contact_info_tv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/ic_info"/>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


</LinearLayout>