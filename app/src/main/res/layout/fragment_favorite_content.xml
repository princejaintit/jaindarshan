<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/whole_bg">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/favorite_content_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/no_record_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/val_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_volume"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/no_fav_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/no_favourite_temple_found"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/search_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/cell_bg_color"
            android:padding="10dp"
            android:text="@string/search_content"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>